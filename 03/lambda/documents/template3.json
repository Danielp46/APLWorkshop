{
    "type": "APL",
    "version": "1.0",
    "import": [
        {
            "name": "alexa-styles",
            "version" : "1.0.0"
        }
    ],
    "resources": [
        {
            "dimensions": {
              "myTextTopPadding": "50dp"
            }
          }
    ],
    "styles": {
        "myTextStyle": {
            "values": [
                {
                    "fontSize": "22",
                    "fontWeight": "bold",
                    "letterSpacing": "0",
                    "textAlign": "center"
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "items": [
                    {
                        "type": "Image",
                        "source": "${payload.templateData.background}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh"
                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "item": [
                            {
                                "type": "Image",
                                "source": "${payload.templateData.image}",
                                "width": "20vw",
                                "height": "20vw"
                            },
                            {
                                "type": "Text",
                                "text": "${payload.templateData.text}",
                                "color" : "#FFFFFF",
                                "style" : "textStyleDisplay5",
                                "paddingTop" : "@myTextTopPadding"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}