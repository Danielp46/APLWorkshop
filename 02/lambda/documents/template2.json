{
    "type": "APL",
    "version": "1.0",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "items": [
                    {
                        "type": "Image",
                        "source": "${payload.templateData.background}",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh"
                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "item": [
                            {
                                "type": "Image",
                                "source": "${payload.templateData.image}",
                                "width": "20vw",
                                "height": "20vh"
                            },
                            {
                                "type": "Text",
                                "text": "${payload.templateData.text}",
                                "color" : "#FFFFFF",
                                "textAlign": "center",
                                "paddingTop" : "10vw"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}